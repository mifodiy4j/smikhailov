<web-app>
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>ru.job4j.EchoServlet</servlet-class>
        <description>This servlet is an example servlet</description>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServlet2</servlet-name>
        <servlet-class>ru.job4j.UsersServlet</servlet-class>
        <description>This is the UsersServlet</description>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServlet1</servlet-name>
        <servlet-class>ru.job4j.application_2513.UsersServlet</servlet-class>
        <description>This is the UsersServlet</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServletAdd</servlet-name>
        <servlet-class>ru.job4j.application_2513.UsersServletAdd</servlet-class>
        <description>This is the UsersServletAdd</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServletEdit</servlet-name>
        <servlet-class>ru.job4j.application_2513.UsersServletEdit</servlet-class>
        <description>This is the UsersServletEdit</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServletDelete</servlet-name>
        <servlet-class>ru.job4j.application_2513.UsersServletDelete</servlet-class>
        <description>This is the UsersServletDelete</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServlet2</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServlet1</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServletAdd</servlet-name>
        <url-pattern>/useradd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServletEdit</servlet-name>
        <url-pattern>/useredit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServletDelete</servlet-name>
        <url-pattern>/userdelete</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>postgreSQL Datasource</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>