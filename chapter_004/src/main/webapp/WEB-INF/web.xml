<web-app>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Users Controller Servlet</servlet-name>
        <servlet-class>ru.job4j.UsersController</servlet-class>
        <description>This servlet is an example servlet</description>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServlet2</servlet-name>
        <servlet-class>ru.job4j.UsersServlet</servlet-class>
        <description>This is the UsersServlet</description>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>User Controller Servlet</servlet-name>
        <servlet-class>ru.job4j.application_2513.UserControllerServlet</servlet-class>
        <description>This is the UserControllerServlet</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServletAdd</servlet-name>
        <servlet-class>ru.job4j.application_2513.UsersServletAdd</servlet-class>
        <description>This is the UsersServletAdd</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServletEdit</servlet-name>
        <servlet-class>ru.job4j.application_2513.UsersServletEdit</servlet-class>
        <description>This is the UsersServletEdit</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UsersServletDelete</servlet-name>
        <servlet-class>ru.job4j.application_2513.UsersServletDelete</servlet-class>
        <description>This is the UsersServletDelete</description>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>ru.job4j.SigninController</servlet-class>
        <description>This is the SigninController</description>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Users Controller Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServlet2</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>User Controller Servlet</servlet-name>
        <url-pattern>/user/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServletAdd</servlet-name>
        <url-pattern>/useradd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServletEdit</servlet-name>
        <url-pattern>/useredit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UsersServletDelete</servlet-name>
        <url-pattern>/userdelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

</web-app>