        <mapping resource="ru/job4j/carStorage/models/Body.hbn.xml"/>
        <mapping resource="ru/job4j/carStorage/models/Transmission.hbn.xml"/>
        <mapping resource="ru/job4j/carStorage/models/Engine.hbn.xml"/>
