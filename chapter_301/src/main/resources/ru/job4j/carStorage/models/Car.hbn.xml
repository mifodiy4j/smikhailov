<hibernate-mapping>
    <class name="ru.job4j.carStorage.models.Car" table="cars">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="desc" column="name"/>

        <many-to-one name="transmission"
                     column="transmission_id"
                     class="ru.job4j.carStorage.models.Transmission"/>

        <many-to-one name="body"
                     column="car_body_id"
                     class="ru.job4j.carStorage.models.Body"/>

        <many-to-one name="engine"
                     column="engine_id"
                     class="ru.job4j.carStorage.models.Engine"/>
    </class>
</hibernate-mapping>