<hibernate-mapping>
<class name="ru.job4j.example.models.Item" table="items">
    <id name="id" column="id">
        <generator class="identity"/>
    </id>
    <property name="desc" column="description"/>
    <property name="created" column="create_date"/>

    <many-to-one name="author"
                 column="author_id"
                 class="ru.job4j.example.models.User"/>

    <bag name="comments" inverse="true">
        <key column="item_id" not-null="true"/>
        <one-to-many class="ru.job4j.example.models.Comment"/>
    </bag>
</class>
</hibernate-mapping>